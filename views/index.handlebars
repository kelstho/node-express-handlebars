<div class="row align-items-center justify-content-center p-4 mb-3" id="title">
  <div class="col-s12 justify-content-center">
    <h1 class="text-center">Burgers!</h1>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-sm-4 list-col">
      <h2 class="text-center">Burgers to be devoured:</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-4 align-items-center justify-content-center text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <img src="/assets/images/burger.png" alt="burger" class="mb-4" id="burger">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-sm-4 list-col">
      <h2 class="text-center">Devoured burgers:</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>